<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="kk.myfile"
	android:versionCode="1"
	android:versionName="1.0">

	<uses-sdk
		android:minSdkVersion="11"
		android:targetSdkVersion="19" />

	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

	<application
		android:name="kk.myfile.activity.App"
		android:allowBackup="true"
		android:icon="@drawable/ic_icon"
		android:label="@string/app_name"
		android:theme="@style/activity_theme">
		<activity
			android:name="kk.myfile.activity.MainActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name="kk.myfile.activity.DirectActivity" />
		<activity android:name="kk.myfile.activity.TypeActivity" />
		<activity android:name="kk.myfile.activity.DetailActivity" />
		<activity android:name="kk.myfile.activity.SelectActivity" />
		<activity android:name="kk.myfile.activity.SettingActivity" />
		<activity android:name="kk.myfile.activity.SettingSortActivity" />
		<activity android:name="kk.myfile.activity.SettingListStyleActivity" />

		<activity android:name="kk.myfile.activity.ArchiveActivity">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="application/zip" />
				<data android:mimeType="application/rar" />
				<data android:mimeType="application/x-rar-compressed" />
			</intent-filter>
		</activity>
	</application>

</manifest>
