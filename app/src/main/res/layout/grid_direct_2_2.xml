<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:myfile="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingStart="3dp"
	android:paddingEnd="3dp"
	android:paddingTop="1dp"
	android:paddingBottom="1dp"
	android:background="@drawable/btn_bar">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<kk.myfile.ui.GridImageView
			android:id="@+id/iv_icon"
			android:layout_width="wrap_content"
			android:layout_height="60dp"
			android:gravity="center"
			android:scaleType="centerCrop"
			myfile:size_type="fitHeight" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="60dp"
			android:orientation="vertical">

			<View
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1" />

			<TextView
				android:id="@+id/tv_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingStart="3dp"
				android:gravity="left|center_vertical"
				android:singleLine="true"
				android:ellipsize="middle"
				android:textSize="15sp"
				android:textColor="@color/main_text_color" />

			<View
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/tv_time"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingStart="3dp"
					android:gravity="left|center_vertical"
					android:singleLine="true"
					android:ellipsize="middle"
					android:textSize="15sp"
					android:textColor="@color/main_text_color" />

				<View
					android:layout_width="0dp"
					android:layout_height="0dp"
					android:layout_weight="1" />

				<TextView
					android:id="@+id/tv_size"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingStart="4dp"
					android:gravity="right|center_vertical"
					android:singleLine="true"
					android:ellipsize="middle"
					android:textSize="15sp"
					android:textColor="@color/main_text_color" />

			</LinearLayout>

			<View
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1" />
		</LinearLayout>
	</LinearLayout>

	<ImageView
		android:id="@+id/iv_left"
		android:layout_width="@dimen/direct_select_width"
		android:layout_height="@dimen/direct_select_height"
		android:layout_gravity="left|top"
		android:scaleType="centerCrop"
		android:background="@drawable/btn_bar"
		android:visibility="gone" />

	<ImageView
		android:id="@+id/iv_right"
		android:layout_width="@dimen/direct_select_width"
		android:layout_height="@dimen/direct_select_height"
		android:layout_gravity="right|top"
		android:scaleType="centerCrop"
		android:background="@drawable/btn_bar"
		android:visibility="gone" />
</FrameLayout>
