<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/main_bg"
	android:orientation="vertical">

	<LinearLayout
		android:id="@+id/ll_big"
		android:layout_width="match_parent"
		android:layout_height="@dimen/main_bar_height"
		android:layout_marginTop="@dimen/main_gap"
		android:background="@drawable/btn_bar"
		android:orientation="horizontal">

		<TextView
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:paddingLeft="@dimen/main_padding"
			android:paddingRight="@dimen/main_padding"
			android:gravity="left|center_vertical"
			android:textSize="14sp"
			android:textColor="@color/main_text_color"
			android:text="@string/setting_big_file_limit" />

		<EditText
			android:id="@+id/et_input"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="right|center_vertical"
			android:singleLine="true"
			android:numeric="integer"
			android:maxLength="4"
			android:textSize="14sp"
			android:textColor="@color/main_text"
			android:hint="" />

	</LinearLayout>

	<LinearLayout
		android:id="@+id/ll_recent"
		android:layout_width="match_parent"
		android:layout_height="@dimen/main_bar_height"
		android:layout_marginTop="@dimen/main_gap"
		android:background="@drawable/btn_bar"
		android:orientation="horizontal">

		<TextView
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:paddingLeft="@dimen/main_padding"
			android:paddingRight="@dimen/main_padding"
			android:gravity="left|center_vertical"
			android:textSize="14sp"
			android:textColor="@color/main_text_color"
			android:text="@string/setting_recent_file_limit" />

		<EditText
			android:id="@+id/et_input"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="right|center_vertical"
			android:singleLine="true"
			android:numeric="integer"
			android:maxLength="4"
			android:textSize="14sp"
			android:textColor="@color/main_text"
			android:hint="" />

	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1" />

	<LinearLayout
		android:id="@+id/ll_menu"
		android:layout_width="match_parent"
		android:layout_height="@dimen/main_bar_height"
		android:layout_marginTop="@dimen/main_gap"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/iv_cancel"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:padding="@dimen/main_padding"
			android:gravity="center"
			android:scaleType="centerInside"
			android:background="@drawable/btn_bar"
			android:src="@drawable/arrow_left" />

		<ImageView
			android:id="@+id/iv_confirm"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:padding="@dimen/main_padding"
			android:layout_marginLeft="@dimen/main_gap"
			android:gravity="center"
			android:scaleType="centerInside"
			android:background="@drawable/btn_bar"
			android:src="@drawable/tick" />

	</LinearLayout>

</LinearLayout>