<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/main_bg"
	android:orientation="vertical">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<LinearLayout
				android:id="@+id/ll_sort"
				android:layout_width="match_parent"
				android:layout_height="@dimen/main_bar_height"
				android:layout_marginTop="@dimen/main_gap"
				android:background="@drawable/btn_bar"
				android:orientation="horizontal">

				<ImageView
					android:layout_width="@dimen/main_bar_height"
					android:layout_height="@dimen/main_bar_height"
					android:padding="@dimen/setting_icon_padding"
					android:scaleType="centerInside"
					android:src="@drawable/sort" />

				<TextView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:paddingLeft="@dimen/main_padding"
					android:paddingRight="@dimen/main_padding"
					android:layout_marginTop="@dimen/main_gap"
					android:gravity="left|center_vertical"
					android:textSize="@dimen/main_direct_text"
					android:textColor="@color/main_text_color"
					android:text="@string/setting_sort" />

			</LinearLayout>

		</LinearLayout>
	</ScrollView>

	<LinearLayout
		android:id="@+id/ll_menu"
		android:layout_width="match_parent"
		android:layout_height="@dimen/main_bar_height"
		android:layout_marginTop="@dimen/main_gap"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/iv_back"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:padding="@dimen/main_padding"
			android:gravity="center"
			android:scaleType="centerInside"
			android:background="@drawable/btn_bar"
			android:src="@drawable/arrow_left" />

	</LinearLayout>

</LinearLayout>